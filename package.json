{
  "name": "pilotlynx",
  "version": "0.2.1",
  "description": "Local monorepo orchestration layer for running Claude Agent SDK workflows across isolated projects",
  "bin": {
    "pilotlynx": "dist/cli.js"
  },
  "type": "module",
  "exports": {
    ".": "./dist/cli.js"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pilotlynx/pilotlynx.git"
  },
  "homepage": "https://github.com/pilotlynx/pilotlynx#readme",
  "bugs": {
    "url": "https://github.com/pilotlynx/pilotlynx/issues"
  },
  "author": "PilotLynx Contributors",
  "keywords": [
    "cli",
    "agent",
    "claude",
    "orchestration",
    "workflow",
    "scheduling",
    "monorepo",
    "ai"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "files": [
    "dist/",
    "prompts/",
    "template/",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "tsc --noEmit",
    "clean": "rm -rf dist",
    "prepare": "npm run build",
    "prepublishOnly": "npm test"
  },
  "dependencies": {
    "@anthropic-ai/claude-agent-sdk": "^0.2.42",
    "better-sqlite3": "^12.6.2",
    "chalk": "^5.6.2",
    "cli-table3": "^0.6.5",
    "commander": "^14.0.3",
    "croner": "^10.0.1",
    "dotenv": "^17.3.1",
    "env-paths": "^4.0.0",
    "p-queue": "^9.1.0",
    "proper-lockfile": "^4.1.2",
    "yaml": "^2.8.2",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.13",
    "@types/node": "^25.2.3",
    "@types/proper-lockfile": "^4.1.4",
    "@vitest/coverage-v8": "^4.0.18",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.18"
  }
}
